<?xml version="1.0" encoding="utf-8"?>
<com.elasoft.teamup.view.widget.app.AppRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.elasoft.teamup.view.widget.app.AppImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:padding="5dp"
        />

    <com.elasoft.teamup.view.widget.app.AppTextView
        android:id="@+id/tv_unreadCount"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/unread_count_bg"
        android:text="12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@id/tv_timestamp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="10sp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        />

</com.elasoft.teamup.view.widget.app.AppRelativeLayout>