<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/template_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:padding="16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suggest_price"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:layout_marginBottom="8dp"
            />


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seller_desc"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:layout_marginBottom="8dp"
            />

        <com.veevapp.customer.view.customwidget.AppButton
            android:id="@+id/btn_report"
            style="@style/primary_button"
            android:text="@string/report"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_marginBottom="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:layout_marginBottom="6dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                >

                <TextView
                    android:id="@+id/tv_shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="فروشگاه علی"
                    android:fontFamily="@font/iransans"
                    />

                <RatingBar
                    android:id="@+id/rb_shopRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_marginBottom="4dp"
                    android:max="5"
                    />

            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_shopImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/loading_circle"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sellerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seller_name"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:layout_marginBottom="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:id="@+id/tv_shopAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_address"
                android:fontFamily="@font/iransans"
                android:textColor="@color/black"
                android:gravity="right|center"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_telegram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telegram"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:layout_marginBottom="8dp"
            />


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        />

</android.support.constraint.ConstraintLayout>