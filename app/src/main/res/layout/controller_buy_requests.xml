<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/buy_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tbr_paddingHalf"
        android:clipToPadding="false"
        />

    <LinearLayout
        android:id="@+id/empty_list_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/iransans"
            android:text="@string/no_buy_request_yet" />

        <Button
            android:id="@+id/submit_first_buy_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/space_8"
            android:fontFamily="@font/iransans"
            android:text="@string/submit_first_request" />

    </LinearLayout>

</RelativeLayout>