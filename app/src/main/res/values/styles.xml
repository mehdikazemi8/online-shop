<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="template_header_icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/space_normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="register_views">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:layout_margin">@dimen/space_small</item>
    </style>

    <style name="register_views_icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/icons</item>
        <item name="android:layout_margin">@dimen/space_small</item>
    </style>

    <style name="primary_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/space_normal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="primary_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:layout_margin">@dimen/space_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>
